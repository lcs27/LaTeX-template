\RequirePackage{etoolbox}
\SetupKeyvalOptions{family=LCSlang, prefix=LCSlang@, setkeys=\kvsetkeys}
\newcommand{\ekvall}[1]{\kvsetkeys{LCSlang}{#1}}
\DeclareStringOption[chinese]{mainlanguage}
