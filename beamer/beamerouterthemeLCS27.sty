% Footer information line with title, author and slide number
\setbeamertemplate{footline}{
    \leavevmode
    \hbox{
        \usebeamerfont{footline}%
        \begin{beamercolorbox}[
            wd=\textwidth,
            ht=3ex,
            dp=1.25ex
        ]{footline}
            \hspace{1cm}
            \insertshorttitle
            \hfill
            \insertshortauthor
            \hspace{2em}
            \insertframenumber{} / \inserttotalframenumber%
            \hspace{1cm}
        \end{beamercolorbox}
    }
    \vskip0pt
}

