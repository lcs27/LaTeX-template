\mode<presentation>

\RequirePackage{fontspec}

\newfontfamily\FZxiaobiaosong{Dc62.ttf}[BoldFont={Dc48.ttf}, ItalicFont={Dc57.ttf}]
\newfontfamily\FZdabiaosong{Dc48.ttf}[BoldFont={Dc48.ttf}, ItalicFont={Dc57.ttf}]
\newfontfamily\FZheiti{Dc49.ttf}[BoldFont={Dc48.ttf}, ItalicFont={Dc57.ttf}]

\setmainfont[ItalicFont={Dc57.ttf},BoldFont={Dc48.ttf}]{Dc62.ttf}
\setsansfont{Verdana}

\setbeamerfont{title}{
    size=\LARGE,
    shape=\FZdabiaosong
}

\setbeamerfont{subtitle}{
    size=\large,
    shape=\normalfont
}

\setbeamerfont{author}{
    size=\normalsize,
    shape=\normalfont
}

\setbeamerfont{details}{
    size=\footnotesize,
    shape=\normalfont
}

\setbeamerfont{footline}{
    size=\scriptsize,
    shape=\normalfont
}

% Slide title
\setbeamerfont{framesection}{
    size=\normalsize,
    shape=\normalfont
}
\setbeamerfont{frametitle}{size=\LARGE}

\setbeamerfont{framesubtitle}{
    size=\normalsize,
    shape=\normalfont
}

% Blocks
\setbeamerfont{block title}{
    size=\normalfont,
    shape=\FZdabiaosong
}

\setbeamerfont{blockdef}{
    size=\large,
    shape=\normalfont
}

% Description
\setbeamerfont{description item}{shape=\normalfont}
\usefonttheme[onlymath]{serif}
\mode<all>