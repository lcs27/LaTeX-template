\newcommand{\schoollogo}[1]{\def \mbShowLogo{} \newcommand{\lcs@schoollogo}{#1}}
\newcommand{\institute}[1]{\newcommand{\lcs@institute}{#1}}
\renewcommand{\title}[1]{\newcommand{\lcs@title}{#1}}
\renewcommand{\author}[1]{\newcommand{\lcs@author}{#1}}
\let\newdate\@date
\newcommand{\shortauthor}[1]{\newcommand{\lcs@shortauthor}{#1}}

\newcommand{\InsertLogo}{    
    \begin{figure}[ht]
        \centering
            \includegraphics[height=3cm,keepaspectratio]{\lcs@schoollogo}
    \end{figure}
}
\newcommand{\InsertSmallLogo}{
    \begin{picture}(2,3)
    \put(260,0){\includegraphics[height=3cm]{\lcs@schoollogo}}
    \end{picture}
}
\newcommand{\MakeSimpleTitle}{
    \thispagestyle{empty}
    \begin{center}
        \vspace{1cm}%Espace de 1cm
        \Large{\textbf{\lcs@title}}\par
        \normalsize{\lcs@institute \quad \lcs@author}\par
        \normalsize{\newdate}\par
        \vspace{1cm}%Espace de 1cm
    \end{center}
}


\newcommand{\MakeCompletTitle}{
    \thispagestyle{empty}
    \InsertLogo
    \begin{center}
        \vspace{5cm}%Espace de 1cm
        \huge{\textbf{\lcs@title}}\par
        \vspace{1.5cm}%Espace de 1cm
        \Large{\lcs@institute \quad \lcs@author}\par
        \vspace{1cm}%Espace de 1cm
        \Large{\@date}\par
        \vspace{1cm}%Espace de 1cm
    \end{center}
    \newpage
}

\newcommand{\MakeContentTitle}{
    \thispagestyle{empty}
    \InsertLogo
    \begin{center}
        \vspace{5cm}%Espace de 1cm
        \huge{\textbf{\lcs@title}}\par
        \vspace{1.5cm}%Espace de 1cm
        \Large{\lcs@author}\par
        \vspace{1cm}%Espace de 1cm
        \Large{\@date}\par
        \vspace{1cm}%Espace de 1cm
    \end{center}
    \tableofcontents
    \newpage
}

\RequirePackage{fancyhdr}
\RequirePackage{lastpage}
\pagestyle{fancy}
\fancyhf{}
\fancyhead[RE,LO]{\includegraphics[height=1cm,keepaspectratio]{\lcs@schoollogo}}
\fancyhead[CE,CO]{\lcs@title}
\ifdefined\lcs@shortauthor
    \fancyhead[LE,RO]{\lcs@shortauthor}
\else
    \fancyhead[LE,RO]{\lcs@author}
\fi
\fancyfoot[CE,CO]{\thepage \ / \ \pageref{LastPage}}

